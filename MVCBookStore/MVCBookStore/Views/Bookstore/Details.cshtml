<style type="text/css">
    #Datmua a {
        clear: both;
        color: white;
        display: block;
        padding-top: 10px;
        background-color: red;
        width: 120px;
        height: 35px;
        float: right;
        text-align: center;
        text-decoration: none;
        font-weight: bold;
    }

        #Datmua a:hover {
            background-color: gray;
            color: red;
        }
</style>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>THÔNG TIN CHI TIẾT SÁCH</h2>
<div>
    <div style="width:40%; float:left; border-left: dotted 1px; border-color:azure">
        <img src="~/Image/@Model.Hinhminhhoa" style="width:200px ; height:350px" />
    </div>
    <div style="width:60%; float:left; padding:10px">
        <h4 style="font-weight:bold; color:red">Tên sách: @Model.Tensach </h4>
        <p style="text-align:justify"><span style="font-weight:bold"> Mô tả: </span>@Model.Mota </p>
        <p style="font-weight:bold"> Giá bán: <span style="color:red; font-size:16pt "> @Model.Dongia VNĐ</span></p>
        <div id="Datmua">
            <a href="@Url.Action("ThemGioHang", "GioHang", new { @iMasach = @Model.Masach, @strURL=Request.Url.ToString() }) " class="list-group-item">
                ĐẶT MUA
            </a>
        </div>
    </div>
</div>
